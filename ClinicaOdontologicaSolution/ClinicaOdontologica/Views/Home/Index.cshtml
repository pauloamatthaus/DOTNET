@model IEnumerable<Paciente>

@{
    ViewData["Title"] = "Pagina inicial";
}

<div class="text-center">
    <h1 class="display-4">Página Inicial</h1>
</div>
<div>
    <table class="table table-striped">
        <tr>
            <td>Nome</td>
            <td>CPF</td>
        </tr>

        @foreach (var paciente in Model)
        {
            <tr>
                <td>@paciente.nome</td>
                <td>@paciente.cpf</td>
                <td><a asp-controller="Paciente" asp-action="DeletarPaciente" asp-route-id="@paciente.id">Remover</a></td>
            </tr>
        }

    </table>
</div>